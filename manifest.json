{
  "manifest_version": 3,
  "name": "Privacy Rater",
  "version": "1.0",
  "description": "Rates a website's privacy policy based on detected terms.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Check Privacy Rating"
  }
}
